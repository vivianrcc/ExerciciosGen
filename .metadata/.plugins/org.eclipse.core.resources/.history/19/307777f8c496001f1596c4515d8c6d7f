package variaveiseoperadores;

import	java.util.Scanner; 

public class exe01 {
	
	public static void main(String[] args)	{
		
		Scanner reader = new Scanner(System.in);
		
		float salarioBruto, abono,  horasExtras, salarioLiq;
		
		System.out.println("Digite o seu salario: R$ ");
		salarioBruto = reader.nextFloat();
		
		System.out.println("Digite seu Abono : R$  ");
		abono = reader.nextFloat();

		System.out.println("Horas Extras este mês : ");
		horasExtras = reader.nextFloat();

		//CALCULANDO O SALARIO FINAL + o VT CALCULADO PELA PROPIA EMPRESA
        
        float vtDesconto = (salarioBruto * 0.06f);

        salarioLiq = (float) (salarioBruto + abono + (horasExtras * 8) - vtDesconto);
        
        
        System.out.printf("Salário liquido (com %.2f referente ao VT descontado): R$ %.2f" , vtDesconto, salarioLiq );
        
        reader.close();
	
	}

}




