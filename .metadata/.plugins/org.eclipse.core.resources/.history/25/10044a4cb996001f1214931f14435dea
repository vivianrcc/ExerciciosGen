package variaveiseoperadores;

import	java.util.Scanner; 

public class exe01 {
	
	public static void main(String[] args)	{
		
		Scanner reader = new Scanner(System.in);
		
		float salarioBruto, abono,  horasExtras, salarioLiq;
		
		System.out.println("Digite o seu salario: R$ ");
		salarioBruto = reader.nextFloat();
		
		System.out.print("Digite seu Abono : R$  ");
		abono = reader.nextFloat();

		System.out.print("Horas Extras este mês : ");
		horasExtras = reader.nextFloat();

		//CALCULANDO O SALARIO FINAL + o VT CALCULADO PELA PROPIA EMPRESA
		
		salarioLiq = (float) (salarioBruto + abono + (horasExtras * 8)  - (salarioBruto * 0.06));
		
		System.out.printf("Salário liquido (com %6 referente ao VT descontado): R$  %.2f" , salarioLiq );
		
		reader.close();
	
	}

}