/*
 * Escreva um algoritmo em Java, que leia um número inteiro via teclado 
 * e mostre na tela uma mensagem indicando se este número é par 
 * ou ímpar e se o número é positivo ou negativo.
 * Na construção do Algoritmo, utilize os seguintes conteúdos:
 * Entrada e Saída de dados, Operadores e Laço Condicional IF.
*/
package condicionais;

import java.util.Scanner;

public class Exe02 {
	
	public static void main(String[] args) {
		
		Scanner scanner = new Scanner(System.in);
		
		//ENTRADA DE DADOS
		System.out.println("Digite um número: Exemplo= 1, -2, 3");
		int num1 = scanner.nextInt();
		
		 // VERIFICANCO SE É PAR OU IMPAR E + OU -
        if (num1 % 2 == 0 && num1 > 0) {
           System.out.println("O número " + num1 + " é par e positivo!");
        }
        if (num1 % 2 != 0 && num1 < 0) {
            System.out.println("O número" + num1 + " é ímpar e negativo.");
        }
        
        //VERIFICANDO OS DEMAIS NUMEROSS
        
		System.out.println("Digite um número: Exemplo= 1, -2, 3");
		int num2 = scanner.nextInt();
		
		if (num2 % 2 == 0 && num2 > 0) {
            System.out.print(num2 + " é par  e positivo. ");
        }
        if (num2 % 2 != 0 && num2 < 0) {
            System.out.print(num2 + " é ímpar e negativo.");
        }
		
		System.out.println("Digite um número: Exemplo= 1, -2, 3");
		int num3 = scanner.nextInt();
		
		if (num3 % 2 == 0 && num3 > 0) {
            System.out.print(num3 + " é par  e positivo. ");
        }
        if (num3 % 2 != 0 && num3 < 0) {
            System.out.print(num3 + " é ímpar e negativo.");
        }
		
		System.out.println("Digite um número: Exemplo= 1, -2, 3");
		int num4 = scanner.nextInt();
		
		if (num4 % 2 == 0 && num4 > 0) {
            System.out.print(num4 + " é par  e positivo. ");
        }
        if (num4 % 2 != 0 && num4 < 0) {
            System.out.print(num4 + " é ímpar e negativo.");
        }
		
        scanner.close();
		
	}

}
